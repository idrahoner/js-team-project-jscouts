{{#each this}}
  <li class='templates-film' data-id='{{id}}'>
    <div class='gallery__thumb-image'>
      <img
        class='gallery__image'
        srcset='https://image.tmdb.org/t/p/w400{{poster_path}} 1x,
      https://image.tmdb.org/t/p/w500{{poster_path}} 2x'
        src='https://image.tmdb.org/t/p/w400{{poster_path}}'
        alt='{{title}}'
        loading='lazy'
      />
    </div>
    <div class='templates-film__description'>
      <h3 class='templates-film__main-text'>{{title}}</h3>
      <div class='templates-film-flex'>
        <p class='templates-film__text'>
          {{genre_ids}}
        </p>
        <p class='templates-film__text'>| {{release_date}}</p>
        <p class='templates-film__rating'>{{vote_average}}</p>
      </div>
      <button
        class='templates-film__trailer-btn'
        type='button'
        data-modal-close
      >&#127916; Watch trailer</button>

    </div>
  </li>
{{/each}}